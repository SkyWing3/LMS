// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  name          String
  role          String    // 'student', 'teacher', 'admin'
  department    String?   // For teachers
  career        String?   // For students
  semester      String?   // For students
  profilePicture String?
  phone         String?
  address       String?
  notifications Boolean   @default(true)
  darkMode      Boolean   @default(false)
  language      String    @default("es")
  createdAt     DateTime  @default(now())
  
  // Relations
  coursesTeaching Course[]  @relation("TeacherCourses")
  enrollments     Enrollment[]
  submissions     Submission[]
  examResults     ExamResult[]
  systemLogs      SystemLog[]
}

model Course {
  id          Int       @id @default(autoincrement())
  name        String
  code        String    @unique
  description String?
  teacherId   Int?
  teacher     User?     @relation("TeacherCourses", fields: [teacherId], references: [id], onDelete: SetNull)
  
  enrollments Enrollment[]
  assignments Assignment[]
  materials   Material[]
  exams       Exam[]
}

model Enrollment {
  id        Int     @id @default(autoincrement())
  userId    Int
  courseId  Int
  progress  Float   @default(0)
  grade     Float?  // Final grade
  
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
}

model Assignment {
  id          Int       @id @default(autoincrement())
  courseId    Int
  title       String
  description String?
  dueDate     DateTime
  totalPoints Int
  weight      Float     @default(1.0) // Weight in final grade

  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions Submission[]
}

model Submission {
  id            Int       @id @default(autoincrement())
  assignmentId  Int
  studentId     Int
  submittedAt   DateTime  @default(now())
  fileUrl       String?
  content       String?
  grade         Float?
  feedback      String?
  status        String    @default("submitted") // submitted, graded

  assignment    Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student       User       @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Material {
  id        Int      @id @default(autoincrement())
  courseId  Int
  title     String
  type      String   // PDF, VIDEO, LINK
  url       String
  createdAt DateTime @default(now())

  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Exam {
  id          Int      @id @default(autoincrement())
  courseId    Int
  title       String
  date        DateTime
  duration    Int      // minutes
  totalPoints Int
  weight      Float    @default(1.0)

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  results     ExamResult[]
  questions   Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  examId      Int
  text        String
  type        String   // 'MULTIPLE_CHOICE', 'OPEN'
  points      Int
  
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  options     QuestionOption[]
  answers     StudentAnswer[]
}

model QuestionOption {
  id          Int      @id @default(autoincrement())
  questionId  Int
  text        String
  isCorrect   Boolean  @default(false)
  
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answers     StudentAnswer[]
}

model ExamResult {
  id        Int      @id @default(autoincrement())
  examId    Int
  studentId Int
  grade     Float?
  status    String   @default("submitted") // submitted, graded
  feedback  String?
  
  exam      Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  answers   StudentAnswer[]
}

model StudentAnswer {
  id           Int      @id @default(autoincrement())
  examResultId Int
  questionId   Int
  text         String?  // For OPEN questions
  optionId     Int?     // For MULTIPLE_CHOICE questions
  
  examResult   ExamResult     @relation(fields: [examResultId], references: [id], onDelete: Cascade)
  question     Question       @relation(fields: [questionId], references: [id], onDelete: Cascade)
  option       QuestionOption? @relation(fields: [optionId], references: [id], onDelete: Cascade)
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  action    String
  details   String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}